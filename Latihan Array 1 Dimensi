#include <iostream>

using namespace std;

int main()
{
    int air[5];
    int hasil=0;
    for(int i=0; i<5; i++)
        {
            cout << "Input Ember ke-" << (i + 1 ) << ":";
            cin >> air[i];
        }
     cout << "Nilai Air yang Anda masukkan ..." << endl;
     for(int i=0; i<5; i++)
        {
            hasil+= air[i];
            cout << "\nEmber ke-" << (i + 1) << " adalah " << air[i] << " Liter";
        }
     cout << "\nTotal Air setiap Ember ..." << endl << endl;
     cout << hasil << " Liter";
    return 0;
}
